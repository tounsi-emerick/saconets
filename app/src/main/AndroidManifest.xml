<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saconets.app">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.Saconet"
        tools:targetApi="31">
        <activity
            android:name="com.saconets.app.activities.WebViewActivity"
            android:exported="false" />
        <activity
            android:name="com.saconets.app.activities.CarriereActivity"
            android:exported="false" />
        <activity
            android:name="com.saconets.app.activities.SavActivity"
            android:exported="false" />
        <activity
            android:name="com.saconets.app.activities.ContactActivity"
            android:exported="false" />
        <activity
            android:name="com.saconets.app.activities.MenuActivity"
            android:exported="false" />
        <activity
            android:name="com.saconets.app.activities.ShopActivity"
            android:exported="false" />
        <activity
            android:name="com.saconets.app.activities.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/Theme.Saconet.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.saconets.app.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>